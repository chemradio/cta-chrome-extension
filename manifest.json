{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "0.0.1",
    "description": "My Extension for Hello World",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_title": "Click me",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://*.google.com/*"],
            "js": ["contentScript.js"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "exclude": ["*://*/*business*"]
        }
    ],
    "permissions": ["contextMenus", "debugger", "tabs", "downloads"],
    "chrome_url_overrides": {
        "newtab": "myPage.html"
    }
}
