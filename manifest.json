{
    "manifest_version": 3,
    "name": "CTA Helper",
    "version": "0.0.1",
    "description": "CTA Helper",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_title": "CTA Helper"
    },
    "background": {
        "service_worker": "backgroundScript.js",
        "type": "module"
    },
    "permissions": [
        "contextMenus",
        "debugger",
        "downloads",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": ["http://*/*", "https://*/*"]
}
